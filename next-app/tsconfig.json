{
  "compilerOptions": {
    "target": "esnext",
    "lib": [ "dom", "dom.iterable", "esnext" ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "preserve",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components.next-app/*": ["./app/components/*"],
			"@sanity.next-app/*": ["./sanity/*"],
			"@lib.next-app/*": ["./lib/*"],
			"@styles.next-app/*": ["./styles/*"],
			"@public.next-app/*": ["./public/*"],
			"@root.site-template/*": ["../*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
	"files": ["modules.d.ts"]
}
