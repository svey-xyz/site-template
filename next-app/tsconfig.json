{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "preserve",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@components.next-app/*": [
        "./app/components/*"
      ],
      "@sanity.next-app/*": [
        "./sanity/*"
      ],
      "@lib.next-app/*": [
        "./lib/*"
      ],
      "@styles.next-app/*": [
        "./styles/*"
      ],
      "@public.next-app/*": [
        "./public/*"
      ],
      "@next-app/*": [
        "./*"
      ],
      "@config": [
        "./lib/env.conf.ts"
      ],
      "@root.site-template/*": [
        "../*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "sanity.types.ts",
    "../global.d.ts",
    ".next/dev/types/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "modules.d.ts",
    "sanity.types.ts"
  ]
}
