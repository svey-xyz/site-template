{
  "compilerOptions": {
		"resolveJsonModule": true,
		"esModuleInterop": true,
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "preserve",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
		"baseUrl": ".",
		"paths": {
			"@root.site-template/*": ["./*"],
		},
  },
  "include": ["**/*.ts", "**/*.tsx", "./env.ts", "./env.json"],
  "exclude": ["node_modules"]
}
